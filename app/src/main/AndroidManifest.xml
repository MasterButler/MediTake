<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ph.edu.mobapde.meditake.meditake">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_with_anti_aliasing"
        android:label="MediTake - Medicine Cabinet"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".activity.AddMedicineActivity"
            android:label="@string/add_medicine"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="ph.edu.mobapde.meditake.meditake.activity.MedicineListActivity"/>

        <activity
            android:name=".activity.MedicineListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <activity
            android:name=".activity.ViewMedicineActivity"
            android:label="@string/view_medicine"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="ph.edu.mobapde.meditake.meditake.activity.MedicineListActivity"/>

        <activity
            android:name=".activity.EditMedicineActivity"
            android:label="@string/edit_medicine_info"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName="ph.edu.mobapde.meditake.meditake.activity.ViewMedicineActivity"/>

        <activity
            android:name=".activity.ScheduleListActivity"
            android:label="@string/title_activity_schedule_list"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity android:name=".activity.WelcomeScreenActivity">
            <!-- INTENT FILTER NAME WILL ON -->
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
    </application>

</manifest>