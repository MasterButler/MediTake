<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.DefaultColorScheme">
        <item name="colorPrimary">@color/theme3_primary</item>
        <item name="colorPrimaryDark">@color/theme3_primaryDark</item>
        <item name="colorAccent">@color/theme3_accent</item>
        <item name="android:statusBarColor">@color/theme3_primaryDark</item>
        <item name="android:textColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:textColorPrimary">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:colorBackground">@color/theme3_background</item>
        <item name="android:editTextColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:color">@color/colorFontLightTheme</item>

        <item name="fab_addButtonColorNormal">@color/theme3_accent</item>
        <item name="fab_addButtonColorPressed">@color/theme3_accentDark</item>
        <item name="fab_colorNormal">@color/theme3_accent</item>
        <item name="fab_colorPressed">@color/theme3_accentDark</item>
    </style>

    <style name="AppTheme.NoActionBar.BlueColorScheme">
        <item name="colorPrimary">@color/theme4_primary</item>
        <item name="colorPrimaryDark">@color/theme4_primaryDark</item>
        <item name="colorAccent">@color/theme4_accent</item>
        <item name="android:statusBarColor">@color/theme4_primaryDark</item>
        <item name="android:textColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:textColorPrimary">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:colorBackground">@color/theme4_background</item>
        <item name="android:editTextColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:color">@color/colorFontLightTheme</item>

        <item name="fab_addButtonColorNormal">@color/theme4_accent</item>
        <item name="fab_addButtonColorPressed">@color/theme4_accentDark</item>
        <item name="fab_colorNormal">@color/theme4_accent</item>
        <item name="fab_colorPressed">@color/theme4_accentDark</item>
    </style>

    <style name="AppTheme.NoActionBar.IndigoColorScheme">
        <item name="colorPrimary">@color/theme2_primary</item>
        <item name="colorPrimaryDark">@color/theme2_primaryDark</item>
        <item name="colorAccent">@color/theme2_accent</item>
        <item name="android:statusBarColor">@color/theme2_primaryDark</item>
        <item name="android:textColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:textColorPrimary">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:colorBackground">@color/theme2_background</item>
        <item name="android:editTextColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:color">@color/colorFontLightTheme</item>

        <item name="fab_addButtonColorNormal">@color/theme2_accent</item>
        <item name="fab_addButtonColorPressed">@color/theme2_accentDark</item>
        <item name="fab_colorNormal">@color/theme2_accent</item>
        <item name="fab_colorPressed">@color/theme2_accentDark</item>
    </style>

    <style name="AppTheme.NoActionBar.PurpleColorScheme">
        <item name="colorPrimary">@color/theme1_primary</item>
        <item name="colorPrimaryDark">@color/theme1_primaryDark</item>
        <item name="colorAccent">@color/theme1_accent</item>
        <item name="android:statusBarColor">@color/theme1_primaryDark</item>
        <item name="android:textColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:textColorPrimary">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:colorBackground">@color/theme1_background</item>
        <item name="android:editTextColor">@color/colorFontInBackgroundLightTheme</item>
        <item name="android:color">@color/colorFontLightTheme</item>

        <item name="fab_addButtonColorNormal">@color/theme1_accent</item>
        <item name="fab_addButtonColorPressed">@color/theme1_accentDark</item>
        <item name="fab_colorNormal">@color/theme1_accent</item>
        <item name="fab_colorPressed">@color/theme1_accentDark</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextLabel">
        <item name="colorAccent">?attr/colorPrimary</item>
    </style>

    <style name="AddScheduleFragment" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
