    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:background="@drawable/medicine_background"
    android:stateListAnimator="@anim/medicine_selection"
    android:elevation="2dp"
    android:orientation="vertical"
    android:layout_marginBottom="1dp"
    android:id="@+id/cv_holder"
    app:cardCornerRadius="2dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/medicine_syrup_selection_light"
        android:id="@+id/rv_medicine_type_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/aspirins_white"
                android:paddingTop="16dp"
                android:paddingRight="16dp"
                android:alpha="0.54"
                android:id="@+id/iv_medicine_type_drawable"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Generic Name"
                    android:textColor="?attr/editTextColor"
                    android:id="@+id/tv_medicine_generic_name"
                    android:textSize="24sp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_label_black_24dp"
                    android:alpha="0.54"
                    android:paddingRight="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Brand Name"
                    android:textColor="?attr/editTextColor"
                    android:id="@+id/tv_medicine_brand_name"
                    android:textStyle="italic"
                    android:textSize="16sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="24dp"
                    android:src="@drawable/sick_black"
                    android:alpha="0.54"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_medicine_for"
                    android:textColor="?attr/editTextColor"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    tools:hint="Medicine For"
                    android:layout_marginTop="2sp"
                    android:layout_marginBottom="2sp" />
                <!--android:paddingTop="8dp"-->
                <!--android:paddingBottom="11dp"-->

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>


