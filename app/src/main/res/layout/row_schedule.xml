<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardElevation="4dp"
    card_view:cardUseCompatPadding="true"
    >
    <!--android:background="@drawable/schedule_background"-->
    <!--android:stateListAnimator="@anim/schedule_selection"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16sp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="10dp"
                android:paddingBottom="11dp"
                android:text="09:00"

                android:textSize="36sp"
                android:id="@+id/tv_schedule_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                tools:hint="AM"
                android:id="@+id/tv_schedule_periods"
                android:gravity="center"/>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pills_1_colored"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Drink medicineToDrink"
                android:textColor="?attr/editTextColor"
                android:textSize="16sp"
                android:gravity="center_vertical"
                tools:hint="Text"
                android:layout_marginLeft="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:paddingTop="8dp"
                android:paddingBottom="11dp"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lin_action_viewing_schedule">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/lin_edit_schedule">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:padding="2dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:text="EDIT"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/lin_delete_schedule">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:padding="2dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="DELETE"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lin_action_editing_schedule">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/lin_save_schedule">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_done_black_24dp"
                    android:tint="@color/colorPrimary"
                    android:padding="2dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="32dp"
                    android:text="SAVE"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="2dp"
                android:paddingBottom="2dp"
                android:paddingRight="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/lin_cancel_schedule">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_clear_white_24dp"

                    android:tint="@color/colorPrimary"
                    android:padding="2dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="CANCEL"
                    android:textSize="14sp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

