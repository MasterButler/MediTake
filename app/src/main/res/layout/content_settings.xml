<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlueTheme">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:id="@+id/settings_color_theme"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="26dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_color_theme"
                    android:text="Color Theme                                               "
                    android:textSize="18dp"
                    android:textColor="@color/colorFontInBackgroundBlueTheme"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_color_theme"
                    android:layout_weight = "1"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_military_time"
                android:orientation="vertical"
                android:padding="16dp">

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/switch_military"
                    android:text="Military Time"
                    android:textSize="18dp"
                    android:textColor="@color/colorFontInBackgroundBlueTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_military_desc"
                    android:text="Show clock as 13:00 instead of 1:00 PM"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:id="@+id/settings_delete_all_medicine"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="26dp"
                android:text="Delete All Medicine                                 "
                android:textSize="18dp"
                android:textColor="@color/colorFontInBackgroundBlueTheme"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="horizontal"
                android:id="@+id/settings_delete_all_schedule"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="26dp"
                android:text="Delete All Schedule                             "
                android:textSize="18dp"
                android:textColor="@color/colorFontInBackgroundBlueTheme"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>