<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlueTheme">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@color/cardview_light_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Appearance"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/colorAccentBlueTheme"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/settings_color_theme"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_color_theme"
                    android:text="Color Theme                                                       "
                    android:textSize="16sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorFontInBackgroundBlueTheme"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/iv_color_theme"
                    android:layout_weight = "1"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/settings_military_time"
                android:orientation="vertical"
                android:padding="16dp">

                <Switch
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/switch_military"
                    android:text="Military Time"
                    android:textSize="16sp"
                    android:textColor="@color/colorFontInBackgroundBlueTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_military_desc"
                    android:textSize="12sp"
                    android:text="Show clock as 13:00 instead of 1:00 PM"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@color/cardview_light_background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:text="Storage"

                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/colorAccentBlueTheme"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/settings_delete_all_schedule"
                        android:padding="16dp"
                        android:text="Delete All Schedule"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontInBackgroundBlueTheme"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/settings_clear_all_data"
                        android:padding="16dp"
                        android:text="Clear All Data"
                        android:textSize="16sp"
                        android:textColor="@color/colorFontInBackgroundBlueTheme"/>
            </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>