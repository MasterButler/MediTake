<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundBlueTheme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="26dp"
        android:layout_margin="2dp"
        android:background="@color/cardview_light_background"
        android:id="@+id/settings_color_theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_color_theme"
            android:text="Color Theme                                       "
            android:textSize="20dp"
            android:textColor="@color/colorFontInBackgroundBlueTheme"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_color_theme"
            android:layout_weight = "1"
            app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="2dp"
        android:background="@color/cardview_light_background"
        android:id="@+id/settings_military_time">

        <Switch
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/switch_military"
            android:text="Military Time"
            android:textSize="20dp"
            android:textColor="@color/colorFontInBackgroundBlueTheme"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_military_desc"
            android:text="Show clock as 13:00 instead of 1:00 PM"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="26dp"
        android:layout_margin="2dp"
        android:background="@color/cardview_light_background"
        android:id="@+id/settings_delete_all_medicine">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_delete_all_medicine"
            android:text="Delete All Medicine                             "
            android:textSize="20dp"
            android:textColor="@color/colorFontInBackgroundBlueTheme"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:id="@+id/iv_delete_all_medicine"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="26dp"
        android:layout_margin="2dp"
        android:background="@color/cardview_light_background"
        android:id="@+id/settings_delete_all_schedule">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_delete_all_schedule"
            android:text="Delete All Schedule                             "
            android:textSize="20dp"
            android:textColor="@color/colorFontInBackgroundBlueTheme"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:id="@+id/iv_delete_all_schedule"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>